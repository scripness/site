    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="csrf-token" content={get_csrf_token()} />
    <.live_title default="Andrei Scripcaru" suffix=" · Software Engineer">
      {assigns[:page_title]}
    </.live_title>
    <meta
      name="description"
